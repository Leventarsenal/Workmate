<div class="container">
  <form class="form-horizontal" action="/login" method="post">
    <h3 class="col-sm-4" style="color: #2bcf18">Welcome back!</h3>
    <div class="form-group">
      <label for="email" class="col-sm-2 control-label">Email</label>
      <div class="col-sm-6">
        <input type="email" name="email" placeholder="johndoe@company.com" class="form-control" required>
      </div>
    </div>
    <div class="form-group">
      <label for="password" class="col-sm-2 control-label">Password</label>
      <div class="col-sm-6">
        <input type="password" name="password" placeholder="Password" class="form-control" required>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-6 col-sm-offset-3">
        <button type="submit" class="btn btn-dark btn-lg" style="background-color: #2bcf18">Login</button>
      </div>
    </div>
  </form>
</div>